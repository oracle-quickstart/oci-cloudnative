{
  "name": "mushop-user-service",
  "version": "1.1.0",
  "description": "MuShop Node.js Users Service",
  "author": "Oracle",
  "license": "UPL-1.0",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "build:docker": "if [ \"$NODE_ENV\" = \"production\" ]; then npm run build && npm prune --production; fi",
    "schema:init": "node ./schema/init.js",
    "schema:sync": "npm run typeorm -- schema:sync",
    "schema:syncdev": "npm run typeorm:ts -- schema:sync",
    "schema:sync:dryrun": "npm run typeorm -- schema:log",
    "schema:syncdev:dryrun": "npm run typeorm:ts -- schema:log",
    "typeorm": "typeorm",
    "typeorm:ts": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:debug": "node -p \"require('./ormconfig')\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon -i node_modules -r tsconfig-paths/register src/main.ts",
    "start:sync": "npm run schema:syncdev && nodemon -i node_modules -r tsconfig-paths/register src/main.ts",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@digikare/nestjs-prom": "^0.2.1",
    "@godaddy/terminus": "^4.2.0",
    "@nestjs/common": "^6.7.1",
    "@nestjs/core": "^6.7.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.7.1",
    "@nestjs/terminus": "^6.5.5",
    "@nestjs/typeorm": "^6.2.0",
    "@nestjsx/crud": "^4.2.0",
    "@nestjsx/crud-typeorm": "^4.2.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.10.0",
    "morgan": "^1.9.1",
    "oracledb": "^4.0.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "prom-client": "^11.5.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2",
    "typeorm": "^0.3.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.7.1",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/morgan": "^1.7.37",
    "@types/node": "11.13.4",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "2.0.7",
    "jest": "24.7.1",
    "nodemon": "^2.0.20",
    "prettier": "1.17.0",
    "rimraf": "^2.7.1",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "^8.4.1",
    "tsc-watch": "^4.0.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
